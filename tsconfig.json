{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2018"
  },
  "allowJs": true,
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tsconfig.json",
    "node_modules"
  ]
}